<script src='https://cdn.jsdelivr.net/npm/chart.js'></script>
<script type='module'>
  const data =  {
    labels: ['Water (oz)', 'Temperature (Â°)', 'Humidity (%)', 'Height (in.)'],
    datasets: [
      {{#each progressLogs as |log|}}
      {
        label: '{{format_date log.createdAt}}',
        data: [{{log.water_amt}}, {{log.temperature}}, {{log.humidity}}, {{log.height}}],
      },
      {{/each}}
    ]
  };
  const ctx = document.getElementById('progress-chart');
  new Chart(ctx, {
    type: 'bar',
    data,
    options: {
      plugins: {
        title: {
          display: true,
          text: '{{progressLogs.name}} Progress'
        },
      },
      responsive: true,
      scales: {
        x: {
          stacked: false,
        },
        y: {
          beginAtZero: true,
          stacked: false
        }
      }
    }
  });
</script>